@using Models
@model IEnumerable<Product>

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->



<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <a class="btn btn-primary mb-5" asp-controller="Product" asp-action="Add">Add Product</a>
        <div class="row">

            @foreach (var item in Model)
            {
                <partial model="item" name="_card"></partial>
            }

        </div>
    </div>
</div>