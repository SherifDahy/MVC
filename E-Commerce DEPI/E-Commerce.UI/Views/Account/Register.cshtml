@model ViewModels.RegisterVM


@{
    ViewData["Title"] = "SignUp";
    Layout = "_Login_Signin_Layout";
}




<div class="form">
    <div class="form-content">
        <header>Signup</header>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="field input-field">
                <input asp-for="UserName" placeholder="User Name" class="input">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="field input-field">
                <input asp-for="Email" placeholder="Email" class="input">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="field input-field">
                <input asp-for="Password" placeholder="Create password" class="password">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>

            <div class="field input-field">
                <input asp-for="ConfirmPassword" placeholder="Confirm password" class="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <i class='bx bx-hide eye-icon'></i>
            </div>

            <div class="field button-field">
                <button>SignIn</button>
            </div>

        </form>

        <div class="form-link">
            <span>Already have an account? <a asp-controller="Account" asp-action="Login" class="link login-link">Login</a></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    </div>


</div>